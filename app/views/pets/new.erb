<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
<label>Name:</label> <input type="text" name="pet[name]" id="pet_name"> <br>

<label>Choose an existing owner:</label> <br>
<% Owner.all.each do |owner| %>
<input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%>
<%end%>
<br>

<label>or, create a new owner</label>
<br>
<label>name:</label>
<input type="text" name="owner[name]" id="owner_name">
<input type="submit" value="Create Pet">

</form>